{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Website Launch and Debug",
      "type": "chrome",
      "request": "launch",
      "port": 9228,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "url": "http://localhost:8080",
      "sourceMapPathOverrides": {
        "webpack://@boilerplate/website/*": "${webRoot}/packages/website/*",
      },
    },
    {
      "name": "Website Attach",
      "type": "chrome",
      "request": "launch",
      "port": 9228,
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://@boilerplate/website/*": "${webRoot}/packages/website/*",
      },
    },
    {
      "name": "WebAdmin Launch and Debug",
      "type": "chrome",
      "request": "launch",
      "port": 9228,
      "webRoot": "${workspaceFolder}/packages/web-admin",
      "sourceMaps": true,
      "url": "http://localhost:9000",
      "sourceMapPathOverrides": {
        "webpack://@boilerplate/web-admin/*": "${webRoot}/*",
      },
    },
    {
      "name": "WebAdmin Attach",
      "type": "chrome",
      "request": "attach",
      "port": 9228,
      "webRoot": "${workspaceFolder}/packages/web-admin",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack://@boilerplate/web-admin/*": "${webRoot}/*",
      },
    },
    {
      "name": "Debug GraphQL Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceRoot}/packages/graphql-server/src/index.ts",
      "remoteRoot": "${workspaceRoot}/packages/graphql-server/build/index.js",
      "cwd": "${workspaceRoot}/packages/graphql-server"
    }
  ]
}